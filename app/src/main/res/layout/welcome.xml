<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomePage">

    <Button
        android:id="@+id/button_signup"
        android:layout_width="144dp"
        android:layout_height="78dp"
        android:layout_marginBottom="32dp"
        android:text="Sign Up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_signin"
        android:layout_width="144dp"
        android:layout_height="78dp"
        android:layout_marginBottom="32dp"
        android:text="Log In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_signup"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fakenews"
        android:layout_width="146dp"
        android:layout_height="258dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/fakenewsss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/realityCheckLogo"
        app:layout_constraintBottom_toTopOf="@id/computerweb"/>

    <ImageView
        android:id="@+id/computerweb"
        android:layout_width="334dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/fake_news_web"
        app:layout_constraintBottom_toTopOf="@+id/slogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/realityCheckLogo"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/realityCheckLogo"
        android:layout_width="240dp"
        android:layout_height="258dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/rx"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/computerweb"
        app:layout_constraintStart_toEndOf="@+id/fakenews"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:text="Help the world understand how fake news spreads:"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>